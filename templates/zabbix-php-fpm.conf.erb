# Cookbook Name:: zabbix
# Template:: zabbix-php-fpm.conf.erb

[zabbix]
user = <%= @user %>
group = <%= @group %>
listen = /var/run/php-fpm/zabbix.sock
listen.owner = <%= @user %>
listen.group = <%= @group %>
listen.mode = 0660

pm = dynamic
pm.max_children = 50
pm.start_servers = 5
pm.min_spare_servers = 5
pm.max_spare_servers = 35

php_admin_value[memory_limit] = <%= @memory_limit %>
php_admin_value[post_max_size] = <%= @post_max_size %>
php_admin_value[upload_max_filesize] = <%= @upload_max_filesize %>
php_admin_value[max_execution_time] = <%= @max_execution_time %>
php_admin_value[max_input_time] = <%= @max_input_time %>
php_admin_value[date.timezone] = UTC
php_admin_value[session.save_path] = /tmp
php_admin_value[session.gc_maxlifetime] = 1440
php_admin_value[opcache.revalidate_freq] = 0