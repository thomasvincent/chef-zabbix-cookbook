[Unit]
Description=Zabbix Java Gateway
After=network.target

[Service]
Environment="CONFFILE=<%= @java_gateway_conf %>"
EnvironmentFile=-/etc/default/zabbix-java-gateway
Type=simple
Restart=on-failure
PIDFile=/var/run/zabbix/zabbix_java.pid
KillMode=control-group
ExecStart=/usr/sbin/zabbix_java -c $CONFFILE
ExecStop=/bin/kill -SIGTERM $MAINPID
RestartSec=10s
User=zabbix
Group=zabbix
LimitNOFILE=infinity

[Install]
WantedBy=multi-user.target